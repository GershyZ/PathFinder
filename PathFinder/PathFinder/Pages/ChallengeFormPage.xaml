<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PathFinder.Pages.ChallengeFormPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand">
            <ScrollView>
                <StackLayout x:Name="sl_content" Orientation="Vertical" Spacing="5"></StackLayout>
            </ScrollView>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand">
                <Button Text="Submit" Clicked="SubmitForm"/>
                <Button Text="Cancel" Clicked="CancelForm"/> 
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>